.ps-shoe.mb-30
    .ps-shoe__thumbnail
        if (i == 0)
            .ps-badge: span New
            .ps-badge.ps-badge--sale.ps-badge--2nd: span -35%
        else if (i == 3)
            .ps-badge.ps-badge--sale: span -35%
        a(href='#').ps-shoe__favorite: i.ps-icon-heart
        img(src="images/shoe/" + (i + 1) + ".jpg" alt="")
        a(href='product-detail.html').ps-shoe__overlay
    .ps-shoe__content
        .ps-shoe__variants
            .ps-shoe__variant.normal
                img(src="images/shoe/2.jpg" alt="")
                img(src="images/shoe/3.jpg" alt="")
                img(src="images/shoe/4.jpg" alt="")
                img(src="images/shoe/5.jpg" alt="")
            select.ps-rating.ps-shoe__rating
                option(value='1') 1
                option(value='1') 2
                option(value='1') 3
                option(value='1') 4
                option(value='2') 5
        .ps-shoe__detail
            a(href='#').ps-shoe__name Air Jordan 7 Retro
            p.ps-shoe__categories
                a(href='#') Men shoes
                | ,
                a(href='#')  Nike
                | ,
                a(href='#')  Jordan
            span.ps-shoe__price
                if (i == 0 || i == 3)
                    del £220
                |  £ 120